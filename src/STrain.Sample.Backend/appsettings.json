{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "Uri": "https://promtail.mihben.work",
          "PropertiesAsLabels": [
            "Application",
            "Environment",
            "level"
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "S-Train.Sample",
      "Environment": "Production"
    }
  },

  "Senders": {
    "Internal": {
      "BaseAddress": "http://localhost:5100/",
      "Path": "api"
    },
    "External": {
      "BaseAddress": "http://google.com/"
    }
  }
}
